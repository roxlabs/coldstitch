{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./lib",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./src/__tests__/**", "./node_modules"]
}
